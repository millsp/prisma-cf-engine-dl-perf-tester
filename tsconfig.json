{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [ "es2018" ],
    "rootDir": "src",
    "outDir": "build",
		"skipLibCheck": true,
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
